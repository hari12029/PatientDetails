@model ViewModels.ViewModel.BillViewModel


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit</h2>
    </div>

    <form method="post" asp-action="UpdateBillById">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PatientName" class="control-label"></label>
                <select value="--select--" asp-for="PatientName" class="form-control" asp-items="ViewBag.PatientNamedropdownvalues"></select>
            </div>
            <div class="form-group col-md-6">

                <input type="hidden" class="form-control mb-3" asp-for="BillId">

            </div>
            <div class="form-group col-md-6">
                <label asp-for="AmountPaid"></label>
                <input type="number" class="form-control mb-3" asp-for="AmountPaid">

            </div>
            <div class="form-group col-md-6">
                <label asp-for="Balance"></label>
                <input type="number" class="form-control mb-3" asp-for="Balance">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TotalAmount"></label>
                <input type="number" class="form-control mb-3" asp-for="TotalAmount">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ItemName"></label>
                <input type="text" class="form-control mb-3" asp-for="ItemName">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="BillDate"></label>
            <input type="date" class="form-control mb-3" asp-for="BillDate">
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
    </form>

</div>

