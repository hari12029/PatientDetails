@model ViewModels.ViewModel.PatientViiewModel


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div class="form-row">
            <div class="form-group col-md-6">

                <input type="hidden" class="form-control mb-3" asp-for="PatientId">

            </div>
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input type="text" class="form-control mb-3" asp-for="Name">

            </div>
            <div class="form-group col-md-6">
                <label asp-for="Age"></label>
                <input type="number" class="form-control mb-3" asp-for="Age">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Genders" class="control-label">Gender</label>
                <select value="--select--" asp-for="Genders" class="form-control" asp-items="ViewBag.Genderdropdownvalues"></select>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber"></label>
            <input type="tel" class="form-control mb-3" asp-for="PhoneNumber">
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
    </form>

</div>
