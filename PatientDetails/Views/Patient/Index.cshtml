@model IEnumerable<ViewModels.ViewModel.PatientViiewModel>

@{
    ViewData["Title"] = "Patient List";
}
<style>
    #Home {
        text-decoration: none
    }
</style>
<div class="container shadow p-5">
    <a class="btn btn-primary" style="float:right" id="Home" href="/Patient/AddNewPatient">Add Patient</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Gender</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">
                        @item.Name
                    </td>
                    <td width="25%">
                        @item.Age
                    </td>
                    <td width="25%">
                        @item.Genders
                    </td>
                    <td width="25%">
                        @item.PhoneNumber
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.PatientId }) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


